<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">

    <external-path name="external_storage_root" path="." />
    <external-files-path name="external_files_path" path="." />
    <!--
        <root-path/> 代表设备的根目录new File("/");
        <files-path/> 代表context.getFilesDir()
        <cache-path/> 代表context.getCacheDir()
        <external-path/> 代表Environment.getExternalStorageDirectory()
        <external-files-path>代表context.getExternalFilesDirs()
        <external-cache-path>代表getExternalCacheDirs()

        例子：
         //代表内部存储空间应用私有目录下
        LogUtils.i("files-path:"+getFilesDir());
        LogUtils.i("cache-path:"+getCacheDir());
        //代表外部存储空间根目录
        LogUtils.i("external-path:"+Environment.getExternalStorageDirectory());
        //代表外部存储空间应用私有目录下的 files
        LogUtils.i("external-files-path:"+ getExternalFilesDir(null));
        //代表外部存储空间应用私有目录下的 cache/ 目录
        LogUtils.i("external-cache-path:"+getExternalCacheDir());
    -->
</paths>